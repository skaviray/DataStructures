nums = [1, 6, 2, 5, 8, 7, 10, 3]

nos_map = {}
sorted_arr = sorted(nums)
maxim_length = 0
count = 1

for index,num in enumerate(nums):
    if num - 1 in nos_map:
        count += 1
    elif count > 1:
        maxim_length = max(maxim_length, count) 
        count = 1

    nos_map[num] = index
    

print(maxim_length)